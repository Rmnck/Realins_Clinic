<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <RelativeLayout
        android:id="@+id/Rltop"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/gray">


        <TextView
            android:id="@+id/txt_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"/>


        <TextView
            android:id="@+id/txt_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's find your top doctor!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_below="@id/txt_welcome"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"/>


        <RelativeLayout
            android:id="@+id/search_container"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/txt_heading"
            android:layout_marginTop="30dp"
            android:background="@drawable/white_search"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginHorizontal="16dp">


            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/search"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>


            <EditText
                android:id="@+id/search_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/search_icon"
                android:background="@null"
                android:hint="Search here"
                android:paddingStart="8dp"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />
        </RelativeLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/category"
        android:layout_below="@+id/Rltop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>


    <LinearLayout
        android:id="@+id/category_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/category"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pediatric"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pediatrician"
                android:textSize="10sp"
                android:textColor="@android:color/black"
                android:gravity="center"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/lungs"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Internal Medicine"
                android:textSize="10sp"
                android:textColor="@android:color/black"
                android:gravity="center"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/heart"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surgery"
                android:textSize="10sp"
                android:textColor="@android:color/black"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/Recommended"
        android:layout_below="@+id/category_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommended Doctors"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"/>


    <LinearLayout
        android:id="@+id/DrRealin"
        android:layout_below="@+id/Recommended"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">


        <ImageView
            android:id="@+id/Realin"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/docrealin"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Professional Doctor"
                android:textSize="12sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/RealinName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Teresita Realin-Martin"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pediatrician"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/DrTolentino"
        android:layout_below="@+id/DrRealin"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/Tolentino"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/doctolentino"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Professional Doctor"
                android:textSize="12sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/TolentinoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Joy Melchora Tolentino"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/doctorSpecialty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Internal Doctor"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/DrBundal"
        android:layout_below="@+id/DrTolentino"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/Bundal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/docbundal"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Professional Doctor"
                android:textSize="12sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/BundalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Laurence Owen R. Bundal"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surgery"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />


        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/DashboardBTN"
        android:layout_below="@id/DrBundal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SET AN APPOINTMENT"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@drawable/gray_round"/>

</RelativeLayout>