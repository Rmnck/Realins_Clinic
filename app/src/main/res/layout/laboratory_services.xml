<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Laboratory_Services"
    android:layout_margin="10dp">

    <RelativeLayout
        android:id="@+id/tag"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/background_rounded_4a7fa7">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/bckarrow"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-1dp"
            android:layout_marginBottom="-1dp"
            android:gravity="center"
            android:text="Laboratory Services"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/DrRealin"
        android:layout_below="@+id/tag"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/background_rounded_b3cfe5"
            android:src="@drawable/bloodtest"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:background="@drawable/white_search"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BLOOD CHEMISTRY TEST"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/blue" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Glucose(FBS, RBS, OGTT, HBAIC), Lipid Profile(Total Choresterole, Triglycerides, HDL-C), Blood Urea Nitorgen, Blood Uric Acid, Creatine, SGPT/ALT, SGOT/AST, Serum Electrolytes (Na, K, CI, Ca, Mg, P)"
                android:textColor="@color/grey"
                android:textSize="12sp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/DrTolentino"
        android:layout_below="@+id/DrRealin"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/hematologytest"
            android:background="@drawable/background_rounded_b3cfe5"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HERMATOLOGY TEST"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complete Blood Count, Platelet Count, Clotting/Bleeding time"
                android:textColor="@color/grey"
                android:textSize="12sp" />



        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/piercing"
        android:layout_below="@+id/DrTolentino"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/ear"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/background_rounded_b3cfe5"
            android:layout_marginLeft="10dp"
            android:src="@drawable/microscope"
            android:textColor="@color/h" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLINICAL MICROSCOPY TEST"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/blue" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Urinalysis, Fecalysis"
                android:textColor="@color/blue"
                android:textSize="12sp" />




        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/Consult"
        android:layout_below="@+id/piercing"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/serologytest"
            android:layout_gravity="center_vertical"
            android:background="@drawable/background_rounded_b3cfe5"
            android:layout_marginLeft="10dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:background="@drawable/white_search"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEROLOGY TEST"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/blue" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dengue NS1 Ag Test, Dengue Combo test (NS!/IgH/IgM), HBsAG Screening, Syphilis Ab Test (VDRL/RPR), Fecal Occult Blood Test, Urine/Serume HcG Pregnancy Test, Typphidot"
                android:textColor="@color/grey"
                android:textSize="12sp" />



        </LinearLayout>


    </LinearLayout>


</RelativeLayout>